<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.surdroid.androidanimationexample">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".BounceActivity" />
        <activity android:name=".BlinkActivity" />
        <activity android:name=".CrossfadeActivity" />
        <activity android:name=".FadeInActivity" />
        <activity android:name=".FadeOutActivity" />
        <activity android:name=".MoveActivity" />
        <activity android:name=".RotateActivity" />
        <activity android:name=".SequentialActivity" />
        <activity android:name=".SlideDownActivity" />
        <activity android:name=".SlideUpActivity" />
        <activity android:name=".TogetherActivity" />
        <activity android:name=".ZoomInActivity" />
        <activity android:name=".ZoomOutActivity" />
    </application>

</manifest>